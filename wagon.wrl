# Wagons for the train



Switch{
    choice[
    
      DEF WAGON_HEAD1 Shape {
          appearance DEF White Appearance {
          	texture ImageTexture{
          		url "ewagon_top.jpeg"
          	}
            material Material {
            }
          }
          geometry IndexedFaceSet {
            coordIndex [ 0 1 3 2 -1 2 3 5 4 -1 4 5 7 6 -1 6 7 9 8 -1 8 9 11 10 -1 10 11 13 12 -1 12 13 15 14 -1 14 15 17 16 -1 ]
            solid FALSE
            coord DEF Coord Coordinate {
              point [ -0.5 0.0 1.0 0.5 0.0 1.0 -0.5 0.38 0.92 0.5 0.38 0.92 -0.5 0.71 0.71 0.5 0.71 0.71 -0.5 0.92 0.38 0.5 0.92 0.38 -0.5 1.0 0.0 0.5 1.0 0.0 -0.5 0.92 -0.38 0.5 0.92 -0.38 -0.5 0.71 -0.71 0.5 0.71 -0.71 -0.5 0.38 -0.92 0.5 0.38 -0.92 -0.5 0.0 -1.0 0.5 0.0 -1.0 ]
            }
          }
       }

      DEF WAGON_HEAD2 Shape {
          appearance USE White
          geometry IndexedFaceSet {
            coordIndex [ 0 1 3 2 -1 2 3 5 4 -1 4 5 7 6 -1 6 7 9 8 -1 8 9 11 10 -1 10 11 13 12 -1 12 13 15 14 -1 14 15 17 16 -1 ]
            creaseAngle 1.571
            solid FALSE
            coord USE Coord
          }
        }

      DEF WAGON_BOX Shape{
          appearance Appearance {
          			texture ImageTexture{
          			url "ewagon_side.jpeg"
          			} 
                     material Material {
                              diffuseColor  1.0         0.8549     0.7255
                              
                     }
              }
          geometry Box{
              size 20 4 5
              
          }
      }


      
      

      

      DEF WHEEL Transform {
        
            children Inline {
                 url "wheel.wrl"
            }
      }

      DEF connector_ball Shape{
         appearance Appearance {
                
                     material Material {
                              diffuseColor  0.36       0.25      0.2
                              
                     }
              }
          geometry Sphere{
              radius 0.6
              
          }
      }
      DEF connector_log Shape{
          appearance Appearance {
                
                     material Material {
                              diffuseColor  0.36       0.25      0.2
                              
                     }
              }
          geometry Box{
              size 24 0.5 0.5
              
          }
      }


      DEF connector Group{
      children[
        Transform{
          children[USE connector_log]
        }

        Transform{
        translation 13 0 0
        children [USE connector_ball]
        }

        Transform{
        translation -13 0 0
        children [USE connector_ball]
        }
      ]

      }

      DEF full_wagon Group{
        children[
          Transform {
          scale 20 2 2.6
          translation 0.0 1.2 0.0
          children [
            USE WAGON_HEAD1
          ]
          
          }

         
          
          Transform {
          translation 0.0 0.0 0.0      
            children [
              USE WAGON_BOX
            ]
          }

          Transform {
          translation 0.0 -0.8 0.0      
            children [
              USE connector
              
            ]
          }

          Transform {
          translation 8 -2 3.2
          scale 5 5 5 
          children [USE WHEEL]
          }

          Transform {
          translation 8 -2 -2.7
          scale 5 5 5
          children [USE WHEEL]
          }

          Transform {
          translation -8 -2 3.2
          scale 5 5 5 
          children [USE WHEEL]
          }

          Transform {
          translation -8 -2 -2.7
          scale 5 5 5
          children [USE WHEEL]
          }

          





        ]
      }
    ]

}




Group{
  children[
    Transform{
      translation -50 0 0
      children [USE full_wagon]
    }
    Transform{
      translation -25 0 0
      children [USE full_wagon]
    }
    Transform{
      translation 0 0 0
      children [USE full_wagon]
    }
    Transform{
      translation 25 0 0
      children [USE full_wagon]
    }
    Transform{
      translation 50 0 0
      children [USE full_wagon]
    }

  ]
}


